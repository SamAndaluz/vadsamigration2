<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_cmp_message_tree" model="ir.ui.view">
        <field name="name">cmp.message.tree</field>
        <field name="model">cmp.message</field>
        <field name="arch" type="xml">
            <tree default_order='create_date desc'>
                <field name="job_description"/>
                <field name="file_name"/>
                <field name="status_message" string="General Status"/>
                <field name="status" string="V/M Status"/>
                <field name="status_amex" string="Amex Status"/>
                <field name="batch_date_time"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="cmp_message_view_form" model="ir.ui.view">
        <field name="name">cmp.message.view.form</field>
        <field name="model">cmp.message</field>
        <field name="arch" type="xml">
            <form string="CMP Message">
                <header>
                    <button name="process_details" type="object" string="Process content" groups="itl_cmp_interface.group_show_actions_cmp"/>
                    <button name="send_files_to_elavon" type="object" string="Send to ELAVON" groups="itl_cmp_interface.group_show_actions_cmp"/>
                    <button name="loop_files" type="object" string="Process response" groups="itl_cmp_interface.group_show_actions_cmp"/>
                    <button name="validate_rejection_file" type="object" string="Create rejection file" groups="itl_cmp_interface.group_show_actions_cmp"/>
                    <button name="send_rejection_file" type="object" string="Send rejection file" groups="itl_cmp_interface.group_show_actions_cmp"/>
                    <field name="status_message" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <!--<field name="name"/>-->
                        <field name="job_code" />
                        <field name="job_description" />
                        <field name="batch_date_time" />
                        <field name="file" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                        <field name="cmp_item_ids" />
                        <field name="content_file" invisible="1"/>
                    </group>
                    <group>
                        <group string="Visa/MasterCard">
                            <field name="status" />
                            <field name="file_to_elavon" filename="filename_to_elavon"/>
                            <field name="filename_to_elavon" invisible="1"/>
                            <field name="file_from_elavon" filename="filename_from_elavon"/>
                            <field name="filename_from_elavon" invisible="1"/>
                            <field name="file_from_elavon_err" filename="filename_from_elavon_err"/>
                            <field name="filename_from_elavon_err" invisible="1"/>
                        </group>
                        <group string="American Express">
                            <field name="status_amex" />
                            <field name="file_amex_to_elavon" filename="filename_amex_to_elavon"/>
                            <field name="filename_amex_to_elavon" invisible="1"/>
                            <field name="file_amex_from_elavon" filename="filename_amex_from_elavon"/>
                            <field name="filename_amex_from_elavon" invisible="1"/>
                            <field name="file_amex_from_elavon_err" filename="filename_amex_from_elavon_err"/>
                            <field name="filename_amex_from_elavon_err" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="file_rejection_to_cmp" filename="filename_file_rejection_to_cmp"/>
                        <field name="filename_file_rejection_to_cmp" invisible="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

