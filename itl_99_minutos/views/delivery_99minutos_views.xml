<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_delivery_carrier_form_with_provider_99minutos" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.99minutos</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="99minutos Configuration" attrs="{'invisible': [('delivery_type', '!=', '_99minutos')]}">
                    <group>
                        <group>
                            <field name="_99m_apikey_prod" attrs="{'required': [('delivery_type', '=', '_99minutos')]}"/>
                            <field name="_99m_apikey_dev" attrs="{'required': [('delivery_type', '=', '_99minutos')]}"/>
                            <field name="_99m_url_prod" attrs="{'required': [('delivery_type', '=', '_99minutos')]}"/>
                            <field name="_99m_url_dev" attrs="{'required': [('delivery_type', '=', '_99minutos')]}"/>
                            <field name="_99m_url_shipping_rate_prod" attrs="{'required': [('delivery_type', '=', '_99minutos')]}"/>
                            <field name="_99m_url_shipping_rate_dev" attrs="{'required': [('delivery_type', '=', '_99minutos')]}"/>
                        </group>
                        <group>
                            <field name="_99m_deliveryType" attrs="{'required': [('delivery_type', '=', '_99minutos')]}"/>
                            <field name="_99m_packageSize" attrs="{'required': [('delivery_type', '=', '_99minutos')]}"/>
                            <field name="_99m_default_packaging_id" attrs="{'required': [('delivery_type', '=', '_99minutos')]}" domain="[('package_carrier_type', '=', '_99minutos')]"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
