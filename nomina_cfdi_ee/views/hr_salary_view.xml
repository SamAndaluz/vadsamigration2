                    <field name="tipo_deduccion" attrs="{'invisible':[('category_code','not in',['DED'])]}"/>
                    <field name="tipo_otro_pago" attrs="{'invisible':[('category_code','not in',['DED_OTRO'])]}"/>
                    <field name="forma_pago" />
               <!--   <field name="itl_tipo_tabla_isr" />-->
              </field><!--
