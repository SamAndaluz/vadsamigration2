<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_invoice_form_inherited_wpp" model="ir.ui.view">
        <field name="name">account.invoice.form.inherited.wpp</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Pago tarjeta" name="send_wpp_link" type="object" class="btn-primary" attrs="{'invisible': [('state','!=','open')]}"/>
            </xpath>
        </field>
    </record>
    
    <record id="view_wpp_response_tree" model="ir.ui.view">
        <field name="name">wpp_response_tree</field>
        <field name="model">wpp.notifications</field>
        <field name="arch" type="xml">
            <tree>
                <field name="response"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_wpp_response_form" model="ir.ui.view">
        <field name="name">wpp_response_form</field>
        <field name="model">wpp.notifications</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="process" type="object" string="Process" class='btn-default'/>
                </header>
                <sheet>
                    <group>
                        <field name="status"/>
                        <field name="invoice_id" readonly="1"/>
                        <field name="response"/>
                        <field name="decrypted_response"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <record model="ir.actions.act_window" id="wpp_response_action_window">
      <field name="name">WPP Response</field>
      <field name="res_model">wpp.notifications</field>
      <field name="view_mode">tree,form</field>
    </record>

