<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inh_wpp" model="ir.ui.view">
        <field name="name">res.partner.form.wpp</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="WebPay Plus extra info">
                    <group>
                        <field name="token_wpp_ids" nolabel="1">
                            <tree create="false" delete="true" editable="false">
                                <field name="cardToken"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
